{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [
      "vitest/importMeta",
      "vitest/globals",
      "@types/mdx"
    ],
    "baseUrl": ".",
    "paths": {
      "@ui/*": [
        "./src/components/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "include": [
    "env.d.ts",
    "next-env.d.ts",
    "src",
    "workspaces/netlify-cms/src",
    ".next/types/**/*.ts",
    "/Users/akrom/Developer/web/starknet-website/.next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
