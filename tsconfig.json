{
  "extends": "./tsconfig.projects.json",
  "compilerOptions": {
    "outDir": ".types",
    "target": "ES5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "types": ["vitest/importMeta", "vitest/globals", "@types/mdx"],
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["./src/components/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "noEmit": false,
    "emitDeclarationOnly": true,
    "strictNullChecks": true
  },
  "include": [
    "_data/i18n/*.json",
    "_data/i18n/intl/*.json",
    "./next-env.d.ts",
    "./vite-env.d.ts",
    "./src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "_data/categories",
    "_data/_dynamic",
    "_data/events",
    "_data/jobs",
    "_data/pages",
    "_data/posts",
    "_data/settings",
    "_data/topics",
    "_data/tutorials",
    ".yarn",
    "node_modules"
  ],
  "references": [
    {
      "path": "./workspaces/cms-config"
    },
    {
      "path": "./workspaces/cms-data"
    },
    {
      "path": "./workspaces/cms-scripts"
    },
    {
      "path": "./workspaces/cms-utils"
    },
    {
      "path": "./workspaces/netlify-cms"
    },
    {
      "path": "./workspaces/netlify-cms-widgets"
    },
    {
      "path": "./workspaces/static-cms"
    },
    {
      "path": "./workspaces/static-cms-widgets"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
