{
  "name": "root-workspace",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "fmt": "yarn rome:format",
    "rome:format": "rome format --write *.{ts,tsx,js} src workspaces/{netlify-cms,storybook}/{src,*.js,.storybook}",
    "rome:check": "rome check *.{ts,tsx,js} src workspaces/{netlify-cms,storybook}/{src,*.js,.storybook}",
    "eslint:check": "eslint *.{ts,tsx,js} src workspaces/{netlify-cms,storybook}/{src,*.js,.storybook}",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test": "yarn vitest run",
    "test:e2e": "start-server-and-test develop http://localhost:8000 cy:open",
    "test:e2e:ci": "start-server-and-test develop http://localhost:8000 cy:run",
    "typecheck": "tsc --noEmit",
    "storybook": "yarn workspace storybook-workspace storybook",
    "build-storybook": "yarn workspace storybook-workspace build-storybook"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.5",
    "@heroicons/react": "^2.0.13",
    "@mdx-js/loader": "^2.1.5",
    "@mdx-js/react": "^2.1.5",
    "@mertasan/tailwindcss-variables": "^2.5.1",
    "@next/mdx": "^13.0.6",
    "@tailwindcss/forms": "^0.5.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/mdx": "^2.0.3",
    "@types/node": "^18.11.13",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^3.0.0",
    "autoprefixer": "^10.4.13",
    "browser-lang": "0.1.0",
    "classnames": "^2.3.2",
    "cypress": "^11.2.0",
    "eslint": "^8.29.0",
    "eslint-config-next": "^13.0.6",
    "googleapis": "^109.0.1",
    "happy-dom": "^8.1.0",
    "js-yaml-loader": "^1.2.2",
    "next": "^13.0.6",
    "next-intl": "2.11.0-alpha.2",
    "postcss": "^8.4.20",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-use": "^17.4.0",
    "remark-frontmatter": "^4.0.1",
    "remark-mdx-frontmatter": "^2.1.1",
    "rome": "^11.0.0",
    "start-server-and-test": "^1.15.2",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "vite": "^4.0.0",
    "vite-tsconfig-paths": "^4.0.2",
    "vitest": "^0.25.7"
  },
  "packageManager": "yarn@3.3.0",
  "workspaces": [
    "./workspaces/*"
  ]
}
